<div class="comment-partial">

        <div class="comment-container">
            
            <div class="comment-body">
                <p>{{content}}</p>
            </div>
            
            <div class="comment-footer">
                <p class="comment-tagline">By {{user.first_name}} on {{format_date date_created}}</p>
                
                {{!-- these buttons are only rendered if a "user_logged_in" flag is passed in --}}

                {{#if user_logged_in}}
                <button class="comment-{{id}} delete-comment">Delete Comment</button>
                {{/if}}

            </div>
            
        </div>

</div>
